<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/d_light_green" />
            <stroke android:width="1dp" android:color="@color/d_light_green" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/d_dark_navy" />
            <stroke android:width="1dp" android:color="@color/d_dark_gray" />
        </shape>
    </item>
</selector>