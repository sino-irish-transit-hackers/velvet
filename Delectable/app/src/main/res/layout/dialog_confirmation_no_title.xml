<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/reset_password_dialog_height"
    android:background="@color/d_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_24"
    android:paddingRight="@dimen/spacing_24"
    android:paddingTop="@dimen/spacing_24">

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:text="@string/reset_password_dialog_title"
        android:textColor="@color/d_dark_gray"
        android:textSize="@dimen/dialog_action_text_size"
        app:fontName="whitney_book" />

    <RelativeLayout
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/negative_text"
            style="@style/ResetPasswordDialogActionText"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:text="@string/cancel"
            android:textColor="@color/text_dark_gray_to_black" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/positive_text"
            style="@style/ResetPasswordDialogActionText"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:text="@string/ok"
            android:textColor="@color/chestnut_to_chestnut_pressed" />


    </RelativeLayout>


</LinearLayout>

