<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/reset_password_dialog_height"
    android:background="@color/d_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/reset_password_dialog_horizontal_spacing"
    android:paddingRight="@dimen/reset_password_dialog_horizontal_spacing">

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/choose_vintage_dialog_header_height"
        android:gravity="center_vertical|left"
        android:text="@string/reset_password_dialog_title"
        android:textColor="@color/d_dark_gray"
        android:textSize="@dimen/reset_password_dialog_title_text_size"
        app:fontName="whitney_book" />


    <com.delectable.mobile.ui.common.widget.FontEditText
        android:id="@+id/email_address_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/reset_password_dialog_horizontal_spacing"
        android:layout_marginTop="@dimen/reset_password_dialog_vertical_spacing"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:hint="@string/reset_password_dialog_email_hint"
        app:fontName="whitney_book" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/cancel_textview"
            style="@style/ResetPasswordDialogActionText"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:text="@string/cancel"
            android:textColor="@color/text_dark_gray_to_black" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/reset_password_textview"
            style="@style/ResetPasswordDialogActionText"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:text="@string/reset_password_dialog_reset_password"
            android:textColor="@color/btn_text_blue" />


    </RelativeLayout>


</LinearLayout>

