<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/confirmation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_confirm" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmation_icon"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:text="@string/order_confirmation_text"
            android:textColor="@color/d_big_stone"
            android:textSize="20sp"
            app:fontName="whitney_medium" />
    </RelativeLayout>
</RelativeLayout>
