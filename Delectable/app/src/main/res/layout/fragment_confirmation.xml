<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/confirmation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="43dp"
        android:src="@drawable/ic_purchase_confirm" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/thanks_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation_icon"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/order_confirmation_thanks"
        android:textColor="@color/d_dark_gray"
        android:textSize="19sp"
        app:fontName="whitney_medium" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thanks_text"
        android:layout_marginLeft="@dimen/general_row_horizontal_spacing"
        android:layout_marginRight="@dimen/general_row_horizontal_spacing"
        android:gravity="center_horizontal"
        android:text="@string/order_confirmation_text"
        android:textColor="@color/d_dark_gray"
        android:textSize="16sp"
        app:fontName="whitney_book" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/ok_button"
        style="@style/ButtonLargeDChestNutBg"
        android:layout_below="@id/confirm_text"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="34dp"
        android:text="@string/order_confirmation_okay" />
</RelativeLayout>
