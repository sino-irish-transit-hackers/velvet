<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_light_gray"
    tools:context="com.delectable.mobile.ui.home.fragment.FollowFeedTabFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <!--TODO: Progress Activity when loading for first time? -->
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:listSelector="@android:color/white" />

        <LinearLayout
            android:id="@+id/empty_view_following"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical">

            <com.delectable.mobile.ui.common.widget.FontTextView
                style="@style/TextEmptyState"
                android:text="@string/empty_following_feed"
                android:paddingBottom="@dimen/spacing_large" />

            <com.delectable.mobile.ui.common.widget.Delectabutton
                android:id="@+id/search_friends_button"
                style="@style/delectabutton_large"
                app:icon="@drawable/ic_nav_drawer_friends_normal"
                android:text="@string/empty_following_feed_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty_view_you"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical">

            <com.delectable.mobile.ui.common.widget.FontTextView
                style="@style/TextEmptyState"
                android:text="@string/empty_recent_captures" />

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>
