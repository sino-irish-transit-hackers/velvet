<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_view"
        style="@style/ListViewStyle.NoDivider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/spacing_8"
        android:clipToPadding="false" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_row_height"
            android:layout_marginTop="@dimen/spacing_16" />

        <LinearLayout
            android:id="@+id/text_and_button_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_24"
            android:visibility="visible">

            <com.delectable.mobile.ui.common.widget.FontTextView
                android:id="@+id/empty_text_view"
                style="@style/TextEmptyState"
                android:paddingBottom="@dimen/spacing_32"
                android:text="@string/empty_experts" />

            <com.delectable.mobile.ui.common.widget.Delectabutton
                android:id="@+id/connect_button"
                style="@style/delectabutton_large"
                app:icon="@drawable/ic_find_twitter_pressed" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
