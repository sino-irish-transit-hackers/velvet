<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_white">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/d_white"
        android:divider="@color/d_light_gray"
        android:dividerHeight="1dp" />

    <RelativeLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_row_height"
            android:layout_marginTop="16dp" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/no_followers_textview"
            android:layout_width="match_parent"
            android:background="@color/d_white"
            android:layout_height="@dimen/general_row_height"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/followers_no_followers"
            android:textColor="@color/d_black"
            android:textSize="16dp"
            android:visibility="gone"
            app:fontName="whitney_medium" />

    </RelativeLayout>

</RelativeLayout>