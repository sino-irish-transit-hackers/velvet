<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_dark_navy"
    tools:context="com.delectable.mobile.ui.profile.fragment.UserProfileFragment">

    <com.delectable.mobile.ui.profile.widget.ProfileHeaderView
        android:id="@+id/profile_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.delectable.mobile.ui.common.widget.SlidingPagerTabStrip
        android:id="@+id/tabstrip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_below="@+id/profile_header_view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tabstrip"
        android:background="@color/d_white" />
</RelativeLayout>
