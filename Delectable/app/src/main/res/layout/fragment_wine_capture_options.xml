<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_dark_navy">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wine_capture_preview_height"
        android:layout_alignParentTop="true"
        android:background="@color/d_blue" />

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preview_image"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Save to your wine history?"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/action_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/hint_text"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/scan_only_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/wine_capture_button_horizontal_spacing"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/btn_no_normal"
            android:gravity="bottom"
            android:text="SCAN ONLY"
            android:textColor="@color/d_medium_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/scan_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wine_capture_button_horizontal_spacing"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/btn_yes_normal"
            android:gravity="bottom"
            android:text="SCAN &amp; SAVE"
            android:textColor="@color/d_medium_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>