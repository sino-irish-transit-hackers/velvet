<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_white">

    <com.delectable.mobile.ui.common.widget.ObservableListView
        android:id="@+id/list_view"
        style="@style/ListViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true" />

    <include layout="@layout/sticky_toolbar" />

    <View
        android:id="@+id/statusbar_scrim"
        style="@style/StatusBarScrim" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle.Translucent" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/camera_button"
        style="@style/FloatingCameraButton" />

</FrameLayout>
