<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@color/d_gray1">

    <com.delectable.mobile.ui.common.widget.CircleImageView
        android:id="@+id/profile_image1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/no_photo" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_image1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/profile_image1"
        android:text="Claire Underwood"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/followers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_image1"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/profile_image1"
        android:text="1000 followers"
        android:textColor="@color/d_gray3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/following_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_image1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/followers_count"
        android:text="1000 following"
        android:textColor="@color/d_gray3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_bio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/profile_image1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:lines="3"
        android:text="Beer, wine, meat and metal. I'm the master sommelier at Nopa in San Francisco. Beer, wine, meat and metal. I'm the master sommelier at Nopa in San Francisco."
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/d_gray2" />

</RelativeLayout>