<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/d_dark_navy">

    <RelativeLayout
        android:id="@+id/top_profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/profile_header_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_pager_header_height" />

        <!-- TODO: Dot Indicators -->

        <Button
            android:id="@+id/follow_button"
            android:layout_width="210dp"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/profile_header_viewpager"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/profile_vertical_spacing"
            android:layout_marginTop="@dimen/profile_vertical_spacing"
            android:background="@drawable/btn_follow_background"
            android:gravity="center"
            android:textColor="@color/d_white"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>