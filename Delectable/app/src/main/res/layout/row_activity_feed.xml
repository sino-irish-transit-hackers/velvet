<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.delectable.mobile.ui.common.widget.CircleImageView
        android:id="@+id/left_image"
        android:layout_width="@dimen/general_icon_size"
        android:layout_height="@dimen/general_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/cap_list_row_horizontal_spacing"
        android:src="@drawable/no_photo" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/right_image"
        android:layout_toRightOf="@+id/left_image"
        android:textColor="@color/d_black"
        android:textSize="@dimen/text_size_small"
        android:lineSpacingMultiplier="1.2"
        app:fontName="whitney_book" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text"
        android:layout_below="@+id/text"
        android:textColor="@color/d_medium_gray"
        android:textSize="@dimen/recent_activity_time_ago_text_size"
        app:fontName="whitney_book" />

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="@dimen/recent_activity_right_image_size"
        android:layout_height="@dimen/recent_activity_right_image_size"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text"
        android:src="@drawable/no_photo" />

</merge>