<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dialog_horizontal_spacing"
        android:layout_marginRight="@dimen/dialog_horizontal_spacing"
        android:layout_marginTop="@dimen/dialog_vertical_spacing"
        android:clickable="false" />

    <ImageView
        android:id="@+id/cc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/checkout_dialog_chooser_left_margin" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/payment_method_last_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/radio_button"
        android:layout_marginLeft="@dimen/dialog_horizontal_spacing"
        android:layout_toRightOf="@id/cc_type"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:fontName="whitney_book" />


    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/circle_divider"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dialog_horizontal_spacing"
        android:paddingRight="@dimen/dialog_horizontal_spacing"
        android:text="@string/remove"
        android:textColor="@color/d_medium_gray"
        android:textSize="16sp"
        app:fontName="whitney_book" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/row_action_container"
        android:layout_marginLeft="@dimen/checkout_dialog_chooser_left_margin"
        android:layout_marginTop="10dp"
        android:background="@color/d_light_gray"></View>
</merge>