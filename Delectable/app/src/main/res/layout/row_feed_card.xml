<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- remove frame layout that provides margin once refactored to recyclerview -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/spacing_8"
        android:layout_marginRight="@dimen/spacing_8"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/d_white"
        card_view:cardElevation="2dp">

        <com.delectable.mobile.ui.capture.widget.CaptureDetailsView
            android:id="@+id/capture_details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>
</FrameLayout>