<?xml version="1.0" encoding="utf-8"?><!-- made for RelativeLayout-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/follow_contact_row_height">

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/follow_friends_horizontal_spacing"
        android:layout_toLeftOf="@+id/follow_button"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/d_black"
        android:textSize="@dimen/follow_friends_name_text_size"
        app:fontName="whitney_medium" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/invite_button"
        android:layout_width="@dimen/follow_friends_invite_btn_width"
        android:layout_height="@dimen/follow_friends_invite_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/follow_friends_horizontal_spacing"
        android:layout_marginRight="@dimen/follow_friends_horizontal_spacing"
        android:background="@drawable/btn_social_signin_up_bg"
        android:gravity="center"
        android:text="@string/follow_friends_invite"
        android:textColor="@color/d_medium_gray"
        app:fontName="whitney_medium" />
</merge>