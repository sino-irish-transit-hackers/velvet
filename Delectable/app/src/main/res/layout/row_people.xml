<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.delectable.mobile.ui.common.widget.CircleImageView
        android:id="@+id/row_image"
        android:layout_width="@dimen/small_profile_image_size"
        android:layout_height="@dimen/small_profile_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/spacing_16"
        android:layout_marginRight="@dimen/spacing_16"
        android:src="@drawable/no_photo" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/row_name"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/row_image"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/d_dark_gray"
        android:textSize="@dimen/text_size_medium"
        app:fontName="whitney_medium" />

    <ImageView
        android:id="@+id/row_influencer_badge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/row_name"
        android:layout_alignTop="@id/row_name"
        android:layout_toRightOf="@+id/row_name"
        android:layout_marginLeft="6dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_find_expert_pressed"
        android:visibility="gone" />

    <com.delectable.mobile.ui.common.widget.RatingTextView
        android:id="@+id/row_rating"
        style="@style/RatingTextView"
        android:visibility="gone"
        android:layout_marginRight="@dimen/spacing_16"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

</merge>
