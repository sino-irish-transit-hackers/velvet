<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.delectable.mobile.ui.common.widget.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/small_profile_image_size"
        android:layout_height="@dimen/small_profile_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/general_row_horizontal_spacing"
        android:layout_marginRight="@dimen/general_row_horizontal_spacing"
        android:layout_marginTop="@dimen/general_row_vertical_spacing"
        android:src="@drawable/ab_profile_normal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/general_row_vertical_spacing"
        android:layout_marginRight="@dimen/general_row_horizontal_spacing"
        android:layout_marginTop="@dimen/general_row_vertical_spacing"
        android:layout_toRightOf="@id/profile_image"
        android:id="@+id/">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Wayne"
            android:textColor="@color/d_black"
            android:textSize="@dimen/comment_unit_user_name_font_size" />

        <TextView
            android:id="@+id/influencer_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/user_name"
            android:text="Wine Blogger DelectableWineReviews"
            android:textColor="@color/d_medium_gray"
            android:textSize="@dimen/comment_unit_influencer_title_font_size" />

        <TextView
            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/influencer_titles"
            android:text="Soft in texture with a jolt of acidity lifting the blackberry"
            android:textColor="@color/d_dark_gray"
            android:textSize="@dimen/comment_unit_comment_font_size" />

        <com.delectable.mobile.ui.common.widget.RatingsBarView
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rating_bar_height"
            android:layout_below="@id/user_comment"
            android:layout_marginBottom="@dimen/rating_bar_horizontal_spacing"
            android:layout_marginTop="@dimen/rating_bar_horizontal_spacing" />

        <TextView
            android:id="@+id/helpful_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/helpful_button"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/helpful_button"
            android:layout_below="@+id/rating_bar"
            android:layout_toLeftOf="@id/helpful_button"
            android:gravity="center_vertical|left"
            android:text="12 people found this helpful"
            android:textColor="@color/d_medium_gray"
            android:textSize="@dimen/comment_unit_helpful_count_font_size" />

        <ImageButton
            android:id="@+id/helpful_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rating_bar"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/comment_button"
            android:background="@drawable/btn_helpful" />
    </RelativeLayout>

</RelativeLayout>