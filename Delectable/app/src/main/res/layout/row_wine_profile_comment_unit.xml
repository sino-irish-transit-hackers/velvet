<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp">

    <com.delectable.mobile.ui.common.widget.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/small_profile_image_size"
        android:layout_height="@dimen/small_profile_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/ab_profile_normal" />

    <RelativeLayout
        android:id="@+id/capturer_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_profile_image_size"
        android:layout_alignBottom="@id/profile_image"
        android:layout_alignTop="@id/profile_image"
        android:layout_toLeftOf="@+id/rating"
        android:layout_toRightOf="@id/profile_image"
        android:clickable="true"
        android:gravity="center_vertical">

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="User Name"
            android:textColor="@color/d_black"
            android:textSize="@dimen/text_size_medium"
            app:fontName="whitney_medium" />

        <ImageView
            android:id="@+id/influencer_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/user_name"
            android:layout_alignTop="@id/user_name"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/user_name"
            android:src="@drawable/ic_find_expert_pressed"
            android:visibility="visible" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/influencer_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="User Title"
            android:textColor="@color/d_dark_gray"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"
            app:fontName="whitney_book" />

    </RelativeLayout>

    <com.delectable.mobile.ui.common.widget.RatingTextView
        android:id="@+id/rating"
        style="@style/RatingTextView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerVertical="true">

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:text="Soft in texture with a jolt of acidity lifting the blackberry"
            android:textColor="@color/d_dark_gray"
            android:textSize="@dimen/text_size_medium"
            android:lineSpacingMultiplier="1.2"
            app:fontName="whitney_book" />

        <ImageButton
            android:id="@+id/helpful_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_comment"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_helpful" />

        <com.delectable.mobile.ui.common.widget.FontTextView
            android:id="@+id/helpful_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/helpful_button"
            android:layout_alignTop="@id/helpful_button"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/helpful_button"
            android:gravity="center_vertical|left"
            android:text="12 people found this helpful"
            android:textColor="@color/d_medium_gray"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"
            app:fontName="whitney_book" />
    </RelativeLayout>
</merge>