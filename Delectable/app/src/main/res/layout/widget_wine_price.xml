<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="32dp">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/loading"
        style="@style/ProgressBar.Indeterminate"
        app:circleRadius="32dp"
        app:barWidth="4dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:visibility="visible" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/sold_out"
        style="@style/PurchaseWineSoldOut"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/wine_profile_sold_out"
        android:visibility="visible" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/check_price_button"
        style="@style/PurchaseWineCheckPrice"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/wine_profile_check_price"
        android:visibility="visible" />

    <com.delectable.mobile.ui.common.widget.FontTextView
        android:id="@+id/price_button"
        style="@style/ButtonDChestNutBG"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="$10"
        android:textAllCaps="true"
        android:visibility="gone" />

</RelativeLayout>