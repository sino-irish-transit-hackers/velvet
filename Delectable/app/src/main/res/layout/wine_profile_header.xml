<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical">


    <com.delectable.mobile.ui.common.widget.WineBannerView
        android:id="@+id/wine_banner_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cap_feed_row_wine_banner_height"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/varietal_region_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/d_off_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/wine_profile_varietal_region_container_vertical_spacing"
        android:paddingLeft="@dimen/general_row_horizontal_spacing"
        android:paddingRight="@dimen/general_row_horizontal_spacing"
        android:paddingTop="@dimen/wine_profile_varietal_region_container_vertical_spacing">

        <LinearLayout
            android:id="@+id/varietal_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wine_profile_varietal_region_text_vertical_spacing"
            android:orientation="horizontal">
            <!-- TODO make drawable for varietal color -->
            <ImageView
                android:id="@+id/varietal_color_icon"
                android:layout_width="@dimen/wine_profile_varietal_icon_width"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/general_row_horizontal_spacing"
                android:src="@drawable/ic_varietal" />

            <TextView
                android:id="@+id/varietal_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="-"
                android:textColor="@color/d_dark_gray"
                android:textSize="@dimen/wine_profile_varietal_text_height" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/region_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/region_icon"
                android:layout_width="@dimen/wine_profile_varietal_icon_width"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/general_row_horizontal_spacing"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/region_path_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="-"
                android:textColor="@color/d_dark_gray"
                android:textSize="@dimen/wine_profile_varietal_text_height" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ratings_all_years_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wine_profile_ratings_all_years_container_height"
        android:background="@drawable/bg_wine_profile_top_bottom_border"
        android:paddingLeft="@dimen/general_row_horizontal_spacing"
        android:paddingRight="@dimen/general_row_horizontal_spacing">

        <LinearLayout
            android:id="@+id/all_ratings_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_ratings_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/d_light_green"
                android:textSize="@dimen/wine_profile_rating_text_size" />

            <TextView
                android:id="@+id/all_ratings_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/d_medium_gray"
                android:textSize="@dimen/wine_profile_ratings_count_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pro_ratings_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wine_profile_ratings_texts_horizontal_spacing"
            android:layout_toRightOf="@+id/all_ratings_container"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pro_ratings_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/d_light_green"
                android:textSize="@dimen/wine_profile_rating_text_size" />

            <TextView
                android:id="@+id/pro_ratings_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/d_medium_gray"
                android:textSize="@dimen/wine_profile_ratings_count_text_size" />
        </LinearLayout>

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/general_row_horizontal_spacing"
            android:layout_toLeftOf="@+id/all_years_textview"
            android:background="@color/d_light_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/all_years_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:text="@string/wine_profile_all_years"
            android:textColor="@color/chestnut_to_chestnut_pressed"
            android:textSize="@dimen/wine_profile_all_years_text_size" />

    </RelativeLayout>

    <com.delectable.mobile.ui.common.widget.FontTextView
        style="@style/TextEmptyState"
        android:background="@android:color/white"
        android:gravity="center"
        android:id="@+id/empty_view_wine_profile"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/spacing_large"
        android:text="@string/empty_wine_profile"
        android:visibility="gone" />

</LinearLayout>