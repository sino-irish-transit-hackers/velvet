<resources>

    <!-- Base application theme. -->
    <style name="DelectableTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DelectableActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DelectableActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/d_dark_navy</item>
    </style>

    <!-- Divider drawn horizontally, dividing vertical items -->
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/d_light_gray</item>
    </style>


    <!-- Navigation Item Styles -->
    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/d_white</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/nav_text_item_color</item>
    </style>

    <!-- Wine Capture Submit Styles -->
    <style name="WineCaptureSubmitText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/capture_submit_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <!-- TODO: Customize Switch Style -->
    <style name="WineCaptureSubmitSwitch" parent="WineCaptureSubmitText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/capture_submit_margins</item>
    </style>

    <style name="WineCaptureDividers" parent="VerticalDivider">
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
    </style>
</resources>
