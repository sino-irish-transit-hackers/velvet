<resources>

    <!-- Light theme -->
    <style name="DelectableTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DelectableActionBar</item>
        <item name="android:editTextStyle">@style/Delectable.EditText</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DelectableActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/d_off_white</item>
        <item name="android:titleTextStyle">@style/DelectableActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="DelectableActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/d_black</item>
    </style>
    <!-- Light Theme End -->


    <!-- Dark Theme -->
    <style name="DelectableTheme.Dark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DelectableActionBar.Dark</item>
        <item name="android:editTextStyle">@style/Delectable.EditText</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DelectableActionBar.Dark" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/d_big_stone</item>
        <item name="android:titleTextStyle">@style/DelectableActionBarTitleText.Dark</item>
    </style>

    <!-- ActionBar title text -->
    <style name="DelectableActionBarTitleText.Dark" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/d_white</item>
    </style>
    <!-- Dark Theme End -->


    <style name="DelectableTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:editTextStyle">@style/Delectable.EditText</item>
    </style>

    <style name="DelectableTheme.Dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:editTextStyle">@style/Delectable.EditText</item>
    </style>

    <style name="Delectable.EditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="DelectableTheme.Dialog.LoadingCircle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/d_white_80op</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Divider drawn horizontally, dividing vertical items -->
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/d_light_gray</item>
    </style>

    <!-- Navigation Item Styles -->
    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/d_white</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/nav_text_item_color</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <!--Rating TextView-->
    <style name="RatingTextView">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="fontName">whitney_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/d_white</item>
    </style>


    <!-- User Profile Styles -->
    <style name="UserProfileCountTexts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="android:textSize">@dimen/profile_counts_text_size</item>
        <item name="fontName">whitney_book</item>
    </style>

    <!-- Wine Capture Submit Styles -->
    <style name="WineCaptureFlow_optionsLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/capture_submit_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
        <item name="android:paddingRight">@dimen/capture_submit_margins</item>
        <item name="android:background">@drawable/bg_bottom_border</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <!-- TODO: Customize Switch Style -->
    <style name="WineCaptureFlow_switch" parent="WineCaptureFlow_optionsLabel"></style>

    <style name="WineCaptureDividers" parent="VerticalDivider">
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
    </style>


    <!-- Sign up/Sign in Fields -->
    <style name="SignUpIn_fieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/d_dark_gray</item>
        <item name="android:textSize">@dimen/signup_in_field_label_text_size</item>
        <item name="fontName">whitney_book_sc</item>
    </style>

    <style name="SignUpIn_field">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/signup_in_field_text_size</item>
    </style>


    <style name="SignUpIn_fieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_in_field_vertical_spacing</item>
    </style>

    <!-- Sign up/Sign in social sign in buttons-->
    <style name="SignUpIn_social_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signup_in_social_signin_button_height</item>
        <item name="android:background">@drawable/btn_social_signin_up_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/signup_in_social_signin_button_horizontal_padding
        </item>
    </style>

    <style name="SignUpIn_social_icon">
        <item name="android:layout_width">@dimen/signup_in_social_icon_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="SignUpIn_social_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/signup_in_social_signin_button_text_size</item>
        <item name="android:textColor">@color/d_dark_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontName">whitney_book_sc</item>
    </style>

    <style name="SignUpInTermsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/signup_in_terms_privacy_text_size</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="ResetPasswordDialogActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/reset_password_dialog_header_height</item>
        <item name="android:textSize">@dimen/reset_password_dialog_action_text_size</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <!-- Settings Screen -->
    <style name="SettingsBaseTextStyle">
        <item name="android:textColor">@color/d_black</item>
        <item name="android:textColorHint">@color/d_dark_gray</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>

    <style name="SettingsEditText" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_book</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/general_row_horizontal_spacing</item>
    </style>

    <style name="SettingsCategoryLabel">
        <item name="fontName">whitney_medium_sc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:background">@drawable/bg_settings_bottom_border</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/general_row_horizontal_spacing</item>
    </style>


    <style name="SettingsRowTextLabel" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="SettingsRowEditText" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_book</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/settings_text_horizontal_spacing</item>
    </style>

    <style name="SettingsBaseNotificationIconStyle">
        <item name="android:layout_width">@dimen/general_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>

    <style name="SettingsEmailNotificationIcon" parent="SettingsBaseNotificationIconStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_settings_email_notification</item>
        <item name="android:contentDescription">@string/settings_cd_email_notifications</item>
    </style>

    <style name="SettingsPhoneNotificationIcon" parent="SettingsBaseNotificationIconStyle">
        <item name="android:layout_marginRight">
            @dimen/settings_notification_icon_horizontal_spacing
        </item>
        <item name="android:src">@drawable/ic_settings_phone_notification</item>
        <item name="android:contentDescription">@string/settings_cd_phone_notifications</item>
    </style>

    <style name="SettingsAboutCategoryRow">
        <item name="fontName">whitney_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:paddingLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/general_row_horizontal_spacing</item>
        <item name="android:gravity">bottom</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_white_to_light_opacity</item>
        <item name="android:textColor">@color/d_black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>

    <style name="SettingsAboutCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_divider_height</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:background">@color/d_light_gray</item>
    </style>

    <style name="FloatyCameraButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:src">@drawable/btn_floating_shutter</item>
    </style>

    <style name="TextEmptyState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="fontName">whitney_book</item>
    </style>

</resources>
