<resources>

    <style name="Theme.Delectable" parent="Theme.Delectable.Base" />

    <style name="Theme.Delectable.NavDrawer" parent="Theme.Delectable" />

    <style name="Theme.Delectable.Translucent" parent="Theme.Delectable" />

    <style name="Theme.Delectable.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/accentDark</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="elevation">4dp</item>
        <item name="theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarStyle.Floating" parent="@style/ToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <!--<item name="theme">@style/ThemeOverlay.AppCompat</item>-->
    </style>

    <style name="ToolbarStyle.Flat" parent="@style/ToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarStyle.Translucent" parent="ToolbarStyle">
        <item name="android:background">@color/transparent</item>
        <item name="theme">@style/ToolbarTheme.Translucent</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textColor">@color/titles</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/titles</item>
        <item name="android:textColorSecondary">@color/accentDark</item>
        <item name="android:actionMenuTextColor">@color/accentDark</item>
    </style>

    <style name="ToolbarStyle.Error" parent="ToolbarStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_alert</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/d_white</item>
        <item name="android:textColorSecondary">@color/d_white</item>
        <item name="android:background">@color/d_chestnut</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="ToolbarStyleText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_alert</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/d_white</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="ToolbarTheme.Translucent" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/d_white</item>
        <item name="android:textColorSecondary">@color/d_white</item>
        <item name="android:actionMenuTextColor">@color/d_white</item>
    </style>

    <style name="DelectableTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/d_chestnut</item>
    </style>

    <style name="DelectableTheme.Dialog.LoadingCircle" parent="DelectableTheme.Dialog">
    <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/d_white_80op</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/d_light_gray</item>
        <!--<item name="android:listSelector">@color/transparent</item>-->
    </style>

    <style name="ListViewStyle.NoDivider" parent="ListViewStyle">
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Divider drawn horizontally, dividing vertical items -->
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/d_light_gray</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="circleRadius">93dp</item>
        <item name="barWidth">8dp</item>
        <item name="barColor">@color/d_chestnut</item>
    </style>

    <style name="ProgressBar.Indeterminate" parent="ProgressBar">
        <item name="progressIndeterminate">true</item>
    </style>

    <style name="StatusBarScrim">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="delectabutton_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/btn_large</item>
        <item name="android:textColor">@color/d_dark_gray</item>
        <item name="type">large</item>
    </style>

    <style name="delectabutton_facebook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/btn_facebook</item>
        <item name="android:textColor">@color/com_facebook_blue</item>
        <item name="android:icon">@drawable/ic_fb</item>
        <item name="type">large</item>
    </style>

    <!-- Navigation Item Styles -->
    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:background">@drawable/bg_nav_drawer_item</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/d_white</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <!--Rating TextView-->
    <style name="RatingTextView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="fontName">whitney_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/d_white</item>
    </style>

    <!-- User Profile Styles -->
    <style name="UserProfileCountTexts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/d_white</item>
        <item name="android:textSize">@dimen/profile_counts_text_size</item>
        <item name="fontName">whitney_book</item>
    </style>

    <!-- Wine Capture Submit Styles -->
    <style name="WineCaptureFlow_optionsLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/capture_submit_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
        <item name="android:paddingRight">@dimen/capture_submit_margins</item>
        <item name="android:background">@drawable/bg_bottom_border</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="WineCaptureFlow_switch" parent="WineCaptureFlow_optionsLabel"></style>

    <style name="WineCaptureDividers" parent="VerticalDivider">
        <item name="android:layout_marginLeft">@dimen/capture_submit_margins</item>
    </style>


    <!-- Sign up/Sign in Fields -->
    <style name="SignUpIn_fieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">@color/d_dark_gray</item>
        <item name="android:textSize">@dimen/signup_in_field_label_text_size</item>
        <item name="fontName">whitney_book_sc</item>
    </style>

    <style name="SignUpIn_field" parent="Widget.AppCompat.EditText">
    <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/signup_in_field_text_size</item>
    </style>


    <style name="SignUpIn_fieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/signup_in_field_vertical_spacing</item>
    </style>

    <!-- Sign up/Sign in social sign in buttons-->
    <style name="SignUpIn_social_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signup_in_social_signin_button_height</item>
        <item name="android:background">@drawable/btn_social_signin_up_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/signup_in_social_signin_button_horizontal_padding
        </item>
    </style>

    <style name="SignUpIn_social_icon">
        <item name="android:layout_width">@dimen/signup_in_social_icon_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="SignUpIn_social_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/signup_in_social_signin_button_text_size</item>
        <item name="android:textColor">@color/d_dark_gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontName">whitney_book_sc</item>
    </style>

    <style name="SignUpInTermsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/signup_in_terms_privacy_text_size</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="ResetPasswordDialogActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dialog_header_height</item>
        <item name="android:textSize">@dimen/reset_password_dialog_action_text_size</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <!-- Settings Screen -->
    <style name="SettingsBaseTextStyle" parent="Base.TextAppearance.AppCompat">
    <item name="android:textColor">@color/d_black</item>
        <item name="android:textColorHint">@color/d_dark_gray</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>

    <style name="SettingsEditText" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_book</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/general_row_horizontal_spacing</item>
    </style>

    <style name="SettingsCategoryLabel">
        <item name="fontName">whitney_medium_sc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:background">@drawable/bg_settings_bottom_border</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/general_row_horizontal_spacing</item>
    </style>


    <style name="SettingsRowTextLabel" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="SettingsRowEditText" parent="SettingsBaseTextStyle">
        <item name="fontName">whitney_book</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/settings_text_horizontal_spacing</item>
    </style>

    <style name="SettingsBaseNotificationIconStyle">
        <item name="android:layout_width">@dimen/general_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>


    <style name="NotificationsSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>

    </style>

    <style name="SettingsAboutCategoryRow">
        <item name="fontName">whitney_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:paddingLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/general_row_horizontal_spacing</item>
        <item name="android:gravity">bottom</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@color/d_white</item>
        <item name="android:textColor">@color/black_to_chestnut</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:paddingBottom">@dimen/settings_text_bottom_padding</item>
    </style>

    <style name="SettingsAboutCategoryDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_divider_height</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:background">@color/d_light_gray</item>
    </style>

    <style name="FloatingCameraButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@drawable/ic_camera</item>
        <item name="fab_colorNormal">@color/d_chestnut</item>
        <item name="fab_colorPressed">@color/d_chestnut_pressed</item>
        <item name="fab_colorRipple">@color/d_chestnut</item>
    </style>

    <style name="TextEmptyState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="ButtonDChestNutBG">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_login_done</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/d_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="ButtonLargeDChestNutBg" parent="ButtonDChestNutBG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/general_row_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/general_row_horizontal_spacing</item>
    </style>

    <!-- Purchase Wine Styles -->

    <style name="PurchaseWineCheckPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/chestnut_to_chestnut_pressed</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="PurchaseWineSoldOut">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/medium_gray_to_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_medium</item>
    </style>

    <style name="CheckoutRowLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:textColor">@color/d_medium_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <style name="CheckoutAddStuffText" parent="PurchaseWineCheckPrice">
        <item name="fontName">whitney_book</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CheckoutShippingAddRemoveButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_gray_to_chestnut</item>
        <item name="android:textSize">28sp</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <style name="CheckoutPricingLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/checkout_info_left_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="CheckoutPricingAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="CheckoutEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">@dimen/dialog_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/dialog_horizontal_spacing</item>
        <item name="android:background">@drawable/bg_bottom_border</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="fontName">whitney_book</item>
    </style>

    <style name="ActionMenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/d_white</item>
        <item name="android:background">@drawable/btn_login_done</item>
        <item name="fontName">whitney_medium_sc</item>
    </style>

    <style name="ActionMenuBuyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
