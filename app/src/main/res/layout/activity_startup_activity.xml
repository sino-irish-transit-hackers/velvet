<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartupActivity"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <com.mienaikoe.wifimesh.StationLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/station_fragment_initial_margin"
        android:background="@color/black_overlay"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/pager">
        <com.mienaikoe.wifimesh.TypefaceTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="14th Street &amp; 8th Ave"
            android:id="@+id/station_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textIsSelectable="false"
            android:gravity="center_vertical"
            android:padding="4dp"
            auto:customFont="fonts/HelveticaNeue-Medium.otf">
        </com.mienaikoe.wifimesh.TypefaceTextView>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lines_timing"
            android:numColumns="2"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:orientation="horizontal"
            android:padding="10dp"
            android:useDefaultMargins="true">

        </GridLayout>

    </com.mienaikoe.wifimesh.StationLayout>


</RelativeLayout>